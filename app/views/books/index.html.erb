<body>
  <h1>Books</h1>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>

  <% @books.each do |book| %>


  <tbody>
    <tr>
      <td><%= book.title%></td>
      <td><%= book.body %></td>
      <td><%= link_to "Show",book_path(book)%></td>
      <td><%= link_to "Edit",edit_book_path(book)%></td>
      <td><%= link_to "Destroy",book_path(book), method: :delete, "data-confirm" => "Are you sure?" %></td>
    </tr>
  </tbody>

  <% end %>

  </table>
  <h1 class="NewBook">New Book</h1>
<% if @book.errors.any? %>
  <div class = "alert">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
       <h1>error</h1>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
 <%= form_with model: @book, local:true do |f| %>
  <div class="new-create">
  <h4 class="font1">Title</h4>
  <%= f.text_field :title %>
  <h4 class="font1">Body</h4>
  <%= f.text_area :body %>
  <div class="create-book">
  <%= f.submit 'Create Book' %>
  </div>
<% end %>


</body>