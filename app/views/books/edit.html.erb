<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <div class = "alert">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
       <h1>error</h1>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_with model: @book,  local:true do |f| %>
  <div>
    <h4 class="font2">Title</h4>
    <%= f.text_field :title %>
    <h4 class="font2">Body</h4>
    <%= f.text_area :body %>
  </div>

  <div class="button">
    <%= f.submit 'Update Book' %>
  </div>
  
  <%= link_to "Show", book_path(@book.id)%>
  <%= link_to "Back", books_path%>
  
<% end %>